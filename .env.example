# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pimba_db

# Firebase - Backend (Admin SDK - para validar tokens no servidor)
# Opção 1: JSON string (copiar do Firebase Console > Project Settings > Service Accounts)
FIREBASE_SERVICE_ACCOUNT_KEY='{"type": "service_account", "project_id": "your-project", ...}'

# Opção 2: Caminho para arquivo JSON
# FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/firebase-credentials.json

# Firebase - Frontend (Web SDK - para login no navegador)
# Obter em: Firebase Console > Project Settings > General > Your apps > Web app
# FIREBASE_WEB_CONFIG='{"apiKey": "...", "authDomain": "...", "projectId": "...", "storageBucket": "...", "messagingSenderId": "...", "appId": "..."}'

# API
API_HOST=127.0.0.1
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production

# Debug
DEBUG=True
