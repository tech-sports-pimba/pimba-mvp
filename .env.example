# Database
DATABASE_URL=postgresql://postgres@localhost:5432/pimba_db

# Firebase Service Account (Backend)
# Obtenha em: Firebase Console > Project Settings > Service Accounts > Generate new private key
# Pode ser:
# 1. Caminho para arquivo JSON: FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account.json
# 2. JSON inline (para deploy): FIREBASE_SERVICE_ACCOUNT_KEY='{"type": "service_account", ...}'
FIREBASE_SERVICE_ACCOUNT_KEY=

# Firebase Web Config (Frontend)
# Obtenha em: Firebase Console > Project Settings > General > Your apps > Web app
# Formato: FIREBASE_WEB_CONFIG='{"apiKey": "...", "authDomain": "...", ...}'
FIREBASE_WEB_CONFIG=

# API
API_HOST=127.0.0.1
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode
# DEBUG=True: Usa logins mock, sem Firebase necess√°rio
# DEBUG=False: Requer Firebase configurado, login real
DEBUG=False

# Credenciais de desenvolvimento (apenas quando DEBUG=True)
# Customize estas credenciais para seu ambiente de desenvolvimento
DEV_ADMIN_UID=dev-mock-uid-admin
DEV_ADMIN_EMAIL=admin@pimba.com
DEV_ADMIN_NAME=Admin
DEV_ADMIN_TOKEN=dev-mock-token

DEV_PERSONAL_UID=dev-mock-uid-personal
DEV_PERSONAL_EMAIL=personal@pimba.com
DEV_PERSONAL_NAME=Personal Trainer
DEV_PERSONAL_TOKEN=dev-mock-token-personal
DEV_PERSONAL_ID=1
